<% @categories.each_with_index do |category, i| %>
  <tr>
    <td class="hidden-phone"><%= params[:page] ? (params[:page].to_i*10+i-9) : i+1 %></td>
    <td class="hidden-phone"><%= category.division_code rescue '' %></td>
    <td class="hidden-phone"><%= category.division_name rescue '' %></td>
    <td><span class="name"><%= category.code rescue ''%></span></td>
    <td class="hidden-phone"><%= category.name rescue ''%></td>
    <td class="hidden-phone">
      <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_category_path(category), class: "btn btn-primary btn-xs" %>
      <%= link_to raw('<i class="fa fa-trash-o"></i>'), 'javascript:void(0)', onclick: "delete_one(#{category.id}, 'categories')", class: "btn btn-danger btn-xs" %>
    </td>
  </tr>
<% end %>
<tr>
  <td colspan=8>
    <%= will_paginate @categories %>
  </td>
</tr>