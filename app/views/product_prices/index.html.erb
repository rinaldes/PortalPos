<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Harga Produk</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <header>
            <span class="widget-icon"> <i class="fa fa-list-ul"></i> </span>
            <h2>List Harga Produk</h2>
          </header>
          <div>

            <div class="widget-body no-padding">
              <%= link_to new_product_price_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
              <span class="btn-label"><i class="glyphicon glyphicon-product_prices"></i></span>Tambah Harga Produk
              <% end %>
                <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Eksport ke CSV",  product_prices_path(:id => params[:id], format: "csv") %></li>
                      <li><%= link_to "Eksport ke Excel", product_prices_path(:id => params[:id], format: "xls") %></li>
                      <li data-toggle="modal" data-target="#myModal"><a>Import dari CSV</a></li>
                    </ul>
                  </li>
                </ul>
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>

                    <th>No</th>

                    <th>
                      Kode Harga Produk
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Produk
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Harga Jual Kecil
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'address-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'address-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Harga Jual Menengah
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'city_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'city_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Harga Jual Besar
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'area_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'area_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>Aksi</th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'product_prices.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'product_prices.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :h_jual_kecil, params[:h_jual_kecil], class: 'form-control search', name: 'product_prices.h_jual_kecil' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :h_jual_menengah, params[:h_jual_menengah], class: 'form-control search', name: 'product_prices.h_jual_menengah' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :h_jual_besar, params[:h_jual_besar], class: 'form-control search', name: 'product_prices.h_jual_besar' %>
                    </th>
                    <th></th>
                    
                  </tr>
                </thead>
                <tbody id='product_price-list'><%= render 'product_price_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Harga Produk</h4>
      </div>
      <%= form_tag import_product_prices_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", product_prices_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>