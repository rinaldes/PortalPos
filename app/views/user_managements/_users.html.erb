<table class="table no-more-tables table-striped table-hover">
  <thead>
    <tr>
      <th style="width:1%" >
        <div class="checkbox check-default">
          <input id="checkbox10" type="checkbox" value="1" class="checkall">
          <label for="checkbox10"></label>
        </div>
      </th>
      <th style="width:9%">Name</th>
      <th style="width:22%">Username</th>
      <th style="width:6%">Email</th>
      <th style="width:10%">Role</th>
      <th style="width:10%">Status</th>
      <th style="width:10%">Action</th>
    </tr>
  </thead>
  <tbody>
    <tr class="new-rec">
        <td>
            <div class="checkbox check-default">
                <input id="checkbox12" type="checkbox" value="1">
                <label for="checkbox12"></label>
            </div>
        </td>
        <td>
        	<input type="text" placeholder="name" autocomplete="Lorem"/>
        </td>
        <td>
        	<input type="text" placeholder="name" autocomplete="Lorem"/>
        </td>
        <td>
        	<input type="text" placeholder="email"/>
        </td>
        <td>
        	<select>
            	<option>Admin</option>
                <option>User</option>
            </select>
        </td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    </tr>
    <% if users.count > 0 %>
      <% users.each do |user| %>
        <%= render 'user', :user => user %>
      <% end %>
    <% else %>
      <tr>
        <td colspan="7" align="center">No user data found!</td>
      </tr>
    <% end %>
  </tbody>
</table>
        
<div class="row" id="users_footer">
  <div class="col-lg-6">
    <% base = (params[:page].present? ? params[:page].to_i-1 : 0)*users.per_page %>
    <div class="dataTables_info" id="users_info">
      <% if @users_count > 0 %>
        Showing <%= base+1 %> to <%= base+users.per_page %> of <%= @users_count %> entries
      <% end %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="dataTables_paginate paging_bootstrap pagination">
      <%= pagination_links(users, :params => {:controller => controller_name, :action => action_name, :name => params[:name]}) %>
    </div>
  </div>
</div>