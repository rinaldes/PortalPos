<div class="container">
  <div class="row login-container column-seperation">  
    <div class="col-md-4 col-md-offset-4">
      <h2 class="text-center">Reset password</h2>

      <%= form_tag admin_passwords_path, :method => :post, class: "login-form" do %>
        <% if flash.any? %>
          <%- flash.each do |name, msg| -%>
            <%= content_tag :p, msg, id: "flash_#{name}", class: "flash_content text-center" if msg.is_a?(String) %>
          <%- end -%>
        <% else %>
          <p class="text-center">Enter your e-mail address below to reset your password.</p>
        <% end %>

        <div class="row">
          <div class="form-group col-md-12">
            <div class="controls">
              <div class="input-with-icon right">
	          		<%= text_field_tag :email, params[:email], autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Email" %>
              </div>
            </div>
          </div>
        </div>

        <br />
        <div class="row">
          <div class="col-md-12">
            <button class="btn btn-primary btn-cons pull-right btn-demo-space" type="submit">Reset Password</button>
            <div class="clear"></div>
            <hr />
            <div class="text-center">
            	Already remember your password?.
          		<%= link_to "Login", admin_root_path %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>