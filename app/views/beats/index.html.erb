<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Beat</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <%= render :template => 'tabs/sales_area' %>
          <div>

            <div class="widget-body no-padding">
              <%= link_to new_beat_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
              <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Tambah Beat
              <% end %>

              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>

                    <th>No</th>

                    <th>
                      Kode Penyalur 
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'distributor_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'distributor_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nama Penyalur 
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'distributor_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'distributor_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Kode Distrik 
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'distrik_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'distrik_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nama Distrik 
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'distrik_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'distrik_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Kode Beat
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nama Beat 
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>Aksi</th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :distributor_code, params[:distributor_code], class: 'form-control search', name: 'distributors.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :distributor_name, params[:distributor_name], class: 'form-control search', name: 'distributors.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :distrik_code, params[:distrik_code], class: 'form-control search', name: 'distriks.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :distrik_name, params[:distrik_name], class: 'form-control search', name: 'distriks.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'beats.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'beats.name' %>
                    </th>
                    <th></th>
                    
                  </tr>
                </thead>
                <tbody id='beat-list'><%= render 'beat_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>