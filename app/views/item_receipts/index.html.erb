<div id="ribbon">
  <ol class="breadcrumb">
    <li><%= t(:transaction) %></li><li><%= t(:item_receipt) %></li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <%= render :template => 'tabs/ir' %>
          <div>
            <div class="widget-body no-padding" style='overflow-y: hidden'>
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>
                    <th>No</th>
                    <th class='nowrap'>
                      Dekripsi
                      <%= link_to 'javascript:void(0)', id: 'description-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'description-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Diskon Nominal
                      <%= link_to 'javascript:void(0)', id: 'discountNominal-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'discountNominal-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Batas Tanggal Akhir
                      <%= link_to 'javascript:void(0)', id: 'due_date-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'due_date-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Pegawai
                      <%= link_to 'javascript:void(0)', id: 'employee_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'employee_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Nett
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'nett-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'nett-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Bayar
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'paid-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'paid-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Metode Pembayaran
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'payment_type-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'payment_type-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nomor PO
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'po_number-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'po_number-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Tanggal Penerimaan
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'receipt_date-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'receipt_date-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nomor Penerimaan
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'receipt_number-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'receipt_number-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nama Penerima
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'receiver_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'receiver_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Retur
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'retur-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'retur-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Supplier
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'supplier_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'supplier_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Pajak
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'tax-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'tax-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :description, params[:description], class: 'form-control search', name: 'item_receipts.description' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :discountNominal, params[:discountNominal], class: 'form-control search', name: 'item_receipts.discountNominal' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :due_date, params[:due_date], class: 'form-control search', name: 'item_receipts.due_date' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :employee_name, params[:employee_name], class: 'form-control search', name: 'employee.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :nett, params[:nett], class: 'form-control search', name: 'item_receipts.nett' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :paid, params[:paid], class: 'form-control search', name: 'item_receipts.paid' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :payment_type, params[:payment_type], class: 'form-control search', name: 'item_receipts.payment_type' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :po_number, params[:po_number], class: 'form-control search', name: 'item_receipts.po_number' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :receipt_date, params[:receipt_date], class: 'form-control search', name: 'item_receipts.receipt_date' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :receipt_number, params[:receipt_number], class: 'form-control search', name: 'item_receipts.receipt_number' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :receiver_name, params[:receiver_name], class: 'form-control search', name: 'item_receipts.receiver_name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :retur, params[:retur], class: 'form-control search', name: 'item_receipts.retur' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :supplier_name, params[:supplier_name], class: 'form-control search', name: 'supplier.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :tax, params[:tax], class: 'form-control search', name: 'item_receipts.tax' %>
                    </th>                    
                  </tr>
                </thead>
                <tbody id='item_receipt-list'><%= render 'item_receipt_list' %></tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>