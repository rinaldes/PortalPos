<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li><%= t(:distributor) %></li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <%= render template: 'tabs/sales_area' %>
          <div>
            <div class="widget-body no-padding" style='overflow-y: hidden'>
              <%= link_to raw("<span class='btn-label'><i class='glyphicon glyphicon-plus'></i></span>#{t(:add_distributor)}"), new_distributor_url,
                class: "btn btn-labeled btn-primary edit-btn-primary" %>
                <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Eksport ke CSV",  distributors_url(:id => params[:id], format: "csv"), style: 'color: #555 !important' %></li>
                      <li><%= link_to "Eksport ke Excel", distributors_url(:id => params[:id], format: "xls"), style: 'color: #555 !important' %></li>
                      <li data-toggle="modal" data-target="#myModal"><a style='color: #555 !important'>Import dari CSV</a></li>
                    </ul>
                  </li>
                </ul>
                <table class="table table-striped table-bordered" width="100%">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th class='nowrap'>
                        <%= t(:region_code) %>
                        <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'region_code-desc', class: 'sorting hide' %>
                        <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'region_code-asc', class: 'sorting' %>
                      </th>
                      <th class='nowrap'>
                        <%= t(:region_name) %>
                        <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'region_name-desc', class: 'sorting hide' %>
                        <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'region_name-asc', class: 'sorting' %>
                      </th>
                      <th class='nowrap'>
                        <%= t(:area_code) %>
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'area_code-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'area_code-asc', class: 'sorting' %>
                    </th>
                    <th class='nowrap'>
                      <%= t(:area_name) %>
                      <%= link_to 'javascript:void(0)', id: 'area_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'area_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      <%= t(:distributor_code) %>
                      <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      <%= t(:distributor_name) %>
                      <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      <%= t(:address) %>
                      <%= link_to 'javascript:void(0)', id: 'address-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'address-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      <%= t(:phone_1) %>
                      <%= link_to 'javascript:void(0)', id: 'telp1-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'telp1-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      <%= t(:phone_2) %>
                      <%= link_to 'javascript:void(0)', id: 'telp2-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'telp2-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      E-mail
                      <%= link_to 'javascript:void(0)', id: 'email-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'email-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Fax
                      <%= link_to 'javascript:void(0)', id: 'fax-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'fax-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th>Aksi</th>
                  </tr>
                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :region_code, params[:region_code], class: 'form-control search', name: 'areas.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :region_name, params[:region_name], class: 'form-control search', name: 'areas.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :area_code, params[:area_code], class: 'form-control search', name: 'areas.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :area_name, params[:area_name], class: 'form-control search', name: 'areas.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'distributors.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'distributors.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :address, params[:address], class: 'form-control search', name: 'distributors.address' %>
                    </th>
                    <th class="hasinput"><%= text_field_tag :telp1, params[:telp1], class: 'form-control search', name: 'distributors.telp1' %></th>
                    <th class="hasinput"><%= text_field_tag :telp2, params[:telp2], class: 'form-control search', name: 'distributors.telp2' %></th>
                    <th class="hasinput"><%= text_field_tag :email, params[:email], class: 'form-control search', name: 'distributors.email' %></th>
                    <th class="hasinput"><%= text_field_tag :fax, params[:fax], class: 'form-control search', name: 'distributors.fax' %></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody id='distributor-list'><%= render 'distributor_list' %></tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Penyalur</h4>
      </div>
      <%= form_tag import_distributors_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", distributors_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>