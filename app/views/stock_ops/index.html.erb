<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Stock OP</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <header>
            <span class="widget-icon"> <i class="fa fa-list-ul"></i> </span>
            <h2>List Stock OP</h2>
          </header>
          <div>

            <div class="widget-body no-padding">

              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>

                    <th>No</th>

                    <th>
                      Disetujui
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'approved-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'approved-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Tanggal Disetujui
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'approved_date-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'approved_date-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Deskripsi
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'description-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'description-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Tanggal Transaksi
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'transaction_date-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'transaction_date-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Transaksi
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'transaction_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'transaction_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Pengguna
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'username-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'username-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :approved, params[:approved], class: 'form-control search', name: 'stock_ops.approved' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :approved_date, params[:approved_date], class: 'form-control search', name: 'stock_ops.approved_date' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :description, params[:description], class: 'form-control search', name: 'stock_ops.description' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :transaction_date, params[:transaction_date], class: 'form-control search', name: 'stock_ops.transaction_date' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :transaction_code, params[:transaction_code], class: 'form-control search', name: 'sale_transaction.transaction_number' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :username, params[:username], class: 'form-control search', name: 'users.username' %>
                    </th>
                    
                  </tr>
                </thead>
                <tbody id='stock_op-list'><%= render 'stock_op_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>