<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Kecamatan</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <%= render :template => 'tabs/geo' %>
          <div>
            <div class="widget-body no-padding">
              <%= link_to raw('<span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Tambah Kecamatan'), new_kecamatan_url,
                class: "btn btn-labeled btn-primary edit-btn-primary" %>
                <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Eksport ke CSV",  kecamatans_path(:id => params[:id], format: "csv"), style: 'color: #555 !important' %></li>
                      <li><%= link_to "Eksport ke Excel", kecamatans_path(:id => params[:id], format: "xls"), style: 'color: #555 !important' %></li>
                      <li data-toggle="modal" data-target="#myModal"><a style='color: #555 !important'>Import dari CSV</a></li>
                    </ul>
                  </li>
                </ul>
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>
                    <th>No</th>
                    <th class='nowrap'>
                      Kode Wilayah
                      <%= link_to 'javascript:void(0)', id: 'wilayah_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'wilayah_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Nama Wilayah
                      <%= link_to 'javascript:void(0)', id: 'wilayah_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'wilayah_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Kode Provinsi
                      <%= link_to 'javascript:void(0)', id: 'province_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'province_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Nama Provinsi
                      <%= link_to 'javascript:void(0)', id: 'province_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'province_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Kode Kota
                      <%= link_to 'javascript:void(0)', id: 'city_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'city_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Nama Kota
                      <%= link_to 'javascript:void(0)', id: 'city_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'city_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Kode Kecamatan
                      <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th class='nowrap'>
                      Nama Kecamatan
                      <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                      <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                    </th>
                    <th>Aksi</th>
                  </tr>
                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :wilayah_code, params[:wilayah_code], class: 'form-control search', name: 'wilayahs.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :wilayah_name, params[:wilayah_name], class: 'form-control search', name: 'wilayahs.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :province_code, params[:province_code], class: 'form-control search', name: 'provinces.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :province_name, params[:province_name], class: 'form-control search', name: 'provinces.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :city_code, params[:city_code], class: 'form-control search', name: 'cities.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :city_name, params[:city_name], class: 'form-control search', name: 'cities.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'kecamatans.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'kecamatans.name' %>
                    </th>
                    <th></th>
                    
                  </tr>
                </thead>
                <tbody id='kecamatan-list'><%= render 'kecamatan_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Kecamatan</h4>
      </div>
      <%= form_tag import_kecamatans_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", kecamatans_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>