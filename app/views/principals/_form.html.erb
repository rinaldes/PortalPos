<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Data Master</li><li>Principal</li><li><%= label %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <%= render 'layouts/errors' %>
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-principal">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> Principal</h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @principal, html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset>
                <div class="row">
                  <section class="col col-md-12">
                    <section>
                      <label class="col-md-2 label">Kode</label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :code, class: "input-sm" %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Nama <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :name, class: "input-sm" %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Address <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :address, class: "input-sm" %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">NO Telp 1 <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :no_telp1, class: "input-sm" %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">NO Telp 2 </label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :no_telp2, class: "input-sm" %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Fax </label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :fax, :class => "input-sm #{(error_field @principal, :fax)}" %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Email <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :email, :class => "input-sm #{(error_field @principal, :email)}" %></label>
                    </section>

                  </section> <!-- col-md-12 -->
                </div> <!-- row -->
              </fieldset>
              <footer>
                <button type="submit" class="btn btn-primary">
                  Submit
                </button>
                <button type="button" class="btn btn-default" onclick="window.history.back();">
                  Back
                </button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->