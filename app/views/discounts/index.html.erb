<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Diskon</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <header>
            <span class="widget-icon"> <i class="fa fa-list-ul"></i> </span>
            <h2>List Diskon</h2>
          </header>
          <div>

            <div class="widget-body no-padding">
              <%= link_to new_discount_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
              <span class="btn-label"><i class="glyphicon glyphicon-discounts"></i></span>Tambah Diskon
              <% end %>
                <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Eksport ke CSV",  discounts_path(:id => params[:id], format: "csv") %></li>
                      <li><%= link_to "Eksport ke Excel", discounts_path(:id => params[:id], format: "xls") %></li>
                      <li data-toggle="modal" data-target="#myModal"><a>Import dari CSV</a></li>
                    </ul>
                  </li>
                </ul>

              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>

                    <th>No</th>

                    <th>
                      Kode Diskon
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Dekripsi
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Tanggal Mulai
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'start-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'start-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Tanggal Akhir
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'end-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'end-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Pilihan Kisaran
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'pilihan-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'pilihan-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Multi Diskon
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'multi-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'multi-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Flag Multi
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'flag-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'flag-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Batas Penjualan
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'batas-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'batas-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Multi Persen
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'multi_persen-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'multi_persen-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Multi Nilai
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'multi_nilai-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'multi_nilai-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Cakupan
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'npwp-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'npwp-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>Aksi</th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'discounts.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'discounts.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :start, params[:start], class: 'form-control search', name: "trim(to_char(start, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :end, params[:end], class: 'form-control search', name: "trim(to_char(end, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :pilihan, params[:pilihan], class: 'form-control search', name: 'areas.pilihan' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :multi, params[:multi], class: 'form-control search', name: 'regions.multi' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :flag, params[:flag], class: 'form-control search', name: 'discounts.flag' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :batas, params[:batas], class: 'form-control search', name: "trim(to_char(batas, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :multi_persen, params[:multi_persen], class: 'form-control search', name: "trim(to_char(multi_persen, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :multi_nilai, params[:multi_nilai], class: 'form-control search', name: "trim(to_char(multi_nilai, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :cakupan, params[:cakupan], class: 'form-control search', name: 'discounts.cakupan' %>
                    </th>
                    <th></th>
                    
                  </tr>
                </thead>
                <tbody id='discount-list'><%= render 'discount_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Diskon</h4>
      </div>
      <%= form_tag import_discounts_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", discounts_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>