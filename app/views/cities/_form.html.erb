<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Data Master</li><li>Kota</li><li><%= label %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <%= render 'layouts/errors' %>
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-city">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> <%= t(:city) %></h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @city, html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset>
                <div class="row">
                  <section class="col col-md-12">
                    <section>
                      <label class="col-md-2 label"><%= t(:code) %></label>
                      <label class="col-md-9 input custom-input-box">
                        <%= f.text_field :code, class: "input-sm" %>
                      </label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Nama <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :name, class: "input-sm" %></label>
                    </section>
                    <section class="form-group">
                      <label class="col-md-2 label">Provinsi</label>
                      <label class="col-md-9 input custom-input-box">
                        <%= text_field_tag :province_id, params[:province_id], class: "input-sm autocomplete-field", placeholder: "Type to autocomplete" %>
                      </label>
                    </section>
                  </section> <!-- col-md-12 -->
                </div> <!-- row -->
              </fieldset>
              <footer>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->
<script type="text/javascript">
$(document).ready(function() {
  $("#province_id").autocomplete({
    search: function () {},
    source: function (request, response)
    {
      $.ajax(
      {
        url: "/provinces/autocomplete_province_name",
        dataType: "json",
        data: {term: request.term},
        success: function (data){
          response(data)
        },
      });
    },
    select: function( event, ui ) {
    },
      minLength: 1
    });
})
</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script><!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
