<div class="container">
  <div class="row login-container">  
    <div class="col-md-5 col-md-offset-1">
      <h2>Sign in to <strong class="text-info">Portal POS</strong></h2>
      <% if flash.any? %>
        <div id="error_explanation">
          <% flash.each do |name, msg| %>
            <%= content_tag :p, msg, id: "flash_#{name}", class: "flash_content" if msg.is_a?(String) %>
          <% end -%>
        </div>
      <% else %>
        <p>Welcome to Portal POS application</p>
      <% end %>
    </div>
    <div class="col-md-5 ">
      <br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
        <div class="row">
          <div class="form-group col-md-10">
            <div class="controls">
              <div class="input-with-icon right">
                <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username", autocomplete: "off" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-10">
            <span class="help"></span>
            <div class="controls">
              <div class="input-with-icon right">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>         
              </div>
            </div>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="row">
            <div class="control-group  col-md-10">
              <div class="checkbox checkbox check-success pull-right">
                <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>&nbsp;&nbsp;<br/>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>&nbsp;&nbsp;
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Keep me reminded" %>
              </div>
            </div>
          </div>
        <% end -%>
        <div class="row">
          <div class="col-md-10">
            <%= button_tag "Sign in", class: "btn btn-primary btn-cons pull-right", type: "submit" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>