<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Setting</li><li>Role</li><li><%= label %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-role">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> Role</h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @role, html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset>
                <div class="row">
                  <section class="col col-md-12">
                  <section class="col col-md-6">
                    <section>
                      <label class="col-md-2 label">Kode</label>
                      <label class="col-md-9 input custom-input-box">
                        <%= f.text_field :code, class: "input-sm", placeholder: "Auto Generate", disabled: true %>
                      </label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Nama <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :name, :class => "input-sm #{(error_field @role, :name)}" %></label>
                    </section>
                  </section> <!-- col-md-12 -->
                  <section class="col col-md-12">
                    <section>
                      <label class="col-md-2 label">Features <span class='important'>*</span></label>
                    </section>
                    <section>
                      <label class="col-md-8 label">
                      <% FeatureName.select('distinct module_name').each{|m| %>
                        <%= link_to m.module_name %><br/>
                        <% FeatureName.where("module_name='#{m.module_name}'").each{|feature| %>
                          <%= @role.has_privilege(feature) ? (check_box_tag "features[#{feature.id}]", 1, checked: true) : (check_box_tag "features[#{feature.id}]") %>
                          <%= feature.name %><br/>
                        <% } %>
                        <br/><br/>
                      <% } %>
                      </label>
                    </section>
                  </section> <!-- col-md-12 -->
                  </section> <!-- col-md-12 -->
                </div> <!-- row -->
              </fieldset>
              <footer>
                <button type="submit" class="btn btn-primary">
                  Submit
                </button>
                <button type="button" class="btn btn-default" onclick="window.history.back();">
                  Back
                </button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->
