<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>PLU</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <%= render :template => 'tabs/produk' %>
          <div>

            <div class="widget-body no-padding">
              <%= link_to new_plu_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
              <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Tambah PLU
              <% end %>
                <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Eksport ke CSV",  plus_path(:id => params[:id], format: "csv") %></li>
                      <li><%= link_to "Eksport ke Excel", plus_path(:id => params[:id], format: "xls") %></li>
                      <li data-toggle="modal" data-target="#myModal"><a>Import dari CSV</a></li>
                    </ul>
                  </li>
                </ul>
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>

                    <th>No</th>

                    <th>
                      PLU
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Barcode
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'sku_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'sku_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nama Produk
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'sku_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'sku_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Divisi
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'division_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'division_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Kategori
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'category_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'category_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Merk
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'brand_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'brand_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Harga Jual
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'h_jual-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'h_jual-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Harga Beli
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'h_beli-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'h_beli-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Satuan
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'satuan-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'satuan-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>Aksi</th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'plus.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :sku_code, params[:sku_code], class: 'form-control search', name: 'skus.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :sku_name, params[:sku_name], class: 'form-control search', name: 'skus.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :division_name, params[:division_name], class: 'form-control search', name: 'divisions.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :category_name, params[:category_name], class: 'form-control search', name: 'categories.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :brand_name, params[:brand_name], class: 'form-control search', name: 'brands.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :h_jual, params[:h_jual], class: 'form-control search', name: "trim(to_char(h_jual, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :h_beli, params[:h_beli], class: 'form-control search', name: "trim(to_char(h_beli, '99D'))" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :satuan, params[:satuan], class: 'form-control search', name: 'plus.satuan' %>
                    </th>
                    <th></th>
                    
                  </tr>
                </thead>
                <tbody id='plu-list'><%= render 'plu_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import PLU</h4>
      </div>
      <%= form_tag import_plus_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", plus_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>