<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Toko</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
        <header>
            <span class="widget-icon"> <i class="fa fa-list-ul"></i> </span>
            <h2>List Toko</h2>
          </header>
          <div>

            <div class="widget-body no-padding">
              <%= link_to new_shop_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
              <span class="btn-label"><i class="glyphicon glyphicon-shops"></i></span>Tambah Toko
              <% end %>
                <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                  <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Eksport ke CSV",  shops_path(:id => params[:id], format: "csv") %></li>
                      <li><%= link_to "Eksport ke Excel", shops_path(:id => params[:id], format: "xls") %></li>
                      <li data-toggle="modal" data-target="#myModal"><a>Import dari CSV</a></li>
                    </ul>
                  </li>
                </ul>
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>

                    <th>No</th>

                    <th>
                      Kode Penyalur
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'distributor_code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'distributor_code-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Kode Toko
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'code-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Nama Toko
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Alamat
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'address-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'address-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Kota
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'city_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'city_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Daerah
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'area_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'area_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Wilayah
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'region_name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'region_name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Telepon
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'telp-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'telp-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Fax
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'fax-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'fax-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      Email
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'email-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'email-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>
                      NPWP
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'npwp-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'npwp-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>

                    <th>Aksi</th>

                  </tr>

                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :distributor_code, params[:distributor_code], class: 'form-control search', name: 'distributors.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :code, params[:code], class: 'form-control search', name: 'shops.code' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'shops.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :address, params[:address], class: 'form-control search', name: 'shops.address' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :city_name, params[:city_name], class: 'form-control search', name: 'cities.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :area_name, params[:area_name], class: 'form-control search', name: 'areas.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :region_name, params[:region_name], class: 'form-control search', name: 'regions.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :telp, params[:telp], class: 'form-control search', name: 'shops.telp' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :fax, params[:fax], class: 'form-control search', name: 'shops.fax' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :email, params[:email], class: 'form-control search', name: 'shops.email' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :npwp, params[:npwp], class: 'form-control search', name: 'shops.npwp' %>
                    </th>
                    <th></th>
                    
                  </tr>
                </thead>
                <tbody id='shop-list'><%= render 'shop_list' %></tbody>
              </table>

              

            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Toko</h4>
      </div>
      <%= form_tag import_shops_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", shops_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>