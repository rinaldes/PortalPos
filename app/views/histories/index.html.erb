<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>History</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <header>
            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
            <h2>Daftar Riwayat</h2>
          </header>
          <div>
            <div class="widget-body no-padding">
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>
                      Tanggal
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'created_at-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'created_at-asc', class: 'sorting'  do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>
                    <th>
                      Nama History 
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>
                    <th>
                      Batch Sync No
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>
                    <th>
                      Start At
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'name-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>
                    <th>
                      Status
                      <span style="float: right;">
                        <%= link_to 'javascript:void(0)', id: 'status-desc', class: 'sorting hide' do %><i class="fa fa-sort-desc"></i><% end %>
                        <%= link_to 'javascript:void(0)', id: 'status-asc', class: 'sorting' do %><i class="fa fa-sort-asc"></i><% end %>
                      </span>
                    </th>
                  </tr>
                  <tr>
                    <th></th>
                    <th class="hasinput">
                      <%= text_field_tag :created_at, params[:created_at], class: 'form-control search', name: 'histories.created_at' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :created_at, params[:created_at], class: 'form-control search', name: 'histories.created_at' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :created_at, params[:created_at], class: 'form-control search', name: 'histories.created_at' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :name, params[:name], class: 'form-control search', name: 'histories.name' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :status, params[:status], class: 'form-control search', name: 'histories.status' %>
                    </th>
                  </tr>
                </thead>
                <tbody id='history-list'><%= render 'history_list' %></tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>