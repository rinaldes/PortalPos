<div id="ribbon">
  <ol class="breadcrumb">
    <li>Data Master</li><li>Update Aplikasi</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <h2 style="color:#BF1E2D; margin-top:-5px;"><i class="fa fa-list-ul"></i> List Update Aplikasi</h2> <!-- header content -->
          <div>
            <div class="widget-body no-padding">
              <%= link_to raw('<span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Tambah Update Aplikasi'), new_apps_updater_url,
                class: "btn btn-labeled btn-primary edit-btn-primary" %>
              
            </div>
            <table class="table table-striped table-bordered" width="100%">
              <thead>
                <tr>
                  <th>No</th>
                  <th>
                    Versi 
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'code-asc', class: 'sorting' %>
                    </span>
                  </th>
                  <th>
                    Codename
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'name-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'name-asc', class: 'sorting' %>
                    </span>
                    </th>
                  <th>
                    Tanggal Rilis
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'date-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'date-asc', class: 'sorting' %>
                    </span>
                    </th>
                    <th class="col-md-2">Aksi</th>
                  </tr>
                  <tr>
                    <th></th>
                    <th class="hasinput"><%= text_field_tag :code, params[:code], class: 'form-control search' %></th>
                    <th class="hasinput"><%= text_field_tag :name, params[:name], class: 'form-control search' %></th>
                    <th class="hasinput"><%= text_field_tag :date, params[:date], class: 'form-control search' %></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody id='apps_updater-list'><%= render 'apps_updater_list' %></tbody>
              </table>
            </div>
          </div>
      </article>
    </div>
  </section>
</div>